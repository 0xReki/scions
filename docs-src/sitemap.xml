---
layout: compress
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">{%
  assign pages = site.pages | sort: "url"
%}{%
  for page in pages
%}{%
  if page.path contains 'assets' or 
     page.sitemap == false or 
     page.published == 'sponsors' or 
     page.published == 'pre-sponsors' or 
     page.published == 'private' or 
     page.url contains 'robots.txt' or 
     page.url contains '/tags' or
     page.url contains '/.dev' or
     page.url contains '/.well-known' or
     page.url contains '.xml'
%}{% 
  continue
%}{% 
  endif
%}
<url>
  <loc>{{ page.url | absolute_url }}</loc>{% unless page.type == "index" or page.subcollection or page.url == "/" %}
  <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>{% endunless %}
</url>{% endfor %}{%
  assign pages = site.posts | sort: "url"
%}{%
  for page in pages
%}{%
  unless page.long%}{% 
  continue
%}{% endunless %}{% 
  if page.sitemap == false or 
     page.published == 'sponsors' or 
     page.published == 'pre-sponsors' or 
     page.published == 'private'
%}{% continue %}{% 
endif 
%}
<url>
  <loc>{{ page.url | absolute_url }}</loc>{% unless page.type == "index" or page.subcollection or page.url == "/" %}
  <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>{% endunless %}
</url>{% endfor %}

</urlset>
